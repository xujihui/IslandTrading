<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="15dip"
        android:textSize="18sp"
        android:id="@+id/lv_name2"
        android:text="小红"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_number2"
        android:textSize="18sp"
        android:layout_marginTop="10dip"
        android:layout_marginRight="10dip"
        android:text="15232127777"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lv_name2"
        android:id="@+id/style2"
        android:textSize="18sp"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:textColor="#ff5722"
        android:text="[默认]"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_name2"
        android:id="@+id/list_chioce_addres"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:textSize="18sp"
        android:text="河北省石家庄市南二环东路20号\t河北师范大学新校区"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/list_chioce_addres"
        android:id="@+id/view"
        android:background="#D0D0D0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:textSize="18sp"
        android:id="@+id/delete"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:drawableLeft="@mipmap/l_delete"
        android:text="删除"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:textSize="18sp"
        android:id="@+id/update"
        android:layout_toLeftOf="@+id/delete"
        android:layout_marginBottom="10dip"
        android:drawableLeft="@mipmap/l_editor"
        android:text="编辑"/>

</RelativeLayout>